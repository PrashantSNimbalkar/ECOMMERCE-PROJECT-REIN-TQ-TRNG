@model IEnumerable<EcommerceProjectReinTrng.Models.Product>

@{ ViewData["Title"] = "ViewCart"; }

<h1>ViewCart</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Price)
    </td>
    <td>
        @Html.ActionLink("Remove", "RemoveFromCart", new { cid = item.CartId }) |
        @Html.ActionLink("Order", "PlaceOrder", new { id = item.Id }) |

    </td>
</tr>}
    </tbody>
</table>
